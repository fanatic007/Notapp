<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:background="@color/grayLight"
    tools:context="in.annexion.notapp.RegisterActivity$PlaceholderFragment">

        <android.support.v7.widget.CardView
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            app:cardCornerRadius="2dp"
            android:elevation="20dp">

            <ScrollView
                android:layout_width="match_parent"
                android:layout_height="match_parent">

                <LinearLayout
                android:orientation="vertical"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:padding="10dp">

                <TextView
                    android:id="@+id/textView_PersonalDetails"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="Personal Details"
                    android:textStyle="bold"
                    android:textColor="@color/textPrimary"
                    android:fontFamily="sans-serif-thin"
                    android:textSize="30sp"
                    android:clickable="true"/>
                <View
                    android:layout_width="match_parent"
                    android:layout_height="1dp"
                    android:background="@color/colorAccent"
                    android:elevation="10dp"/>

                <LinearLayout
                    android:orientation="horizontal"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:weightSum="2">

                    <android.support.design.widget.TextInputLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="8dp"
                        android:layout_marginBottom="8dp"
                        android:layout_weight="1"
                        android:theme="@style/Theme.EditTextBlack">
                        <EditText
                            android:id="@+id/editText_FirstName"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:hint="First Name"
                            android:inputType="textCapWords"
                            android:textColor="@color/textPrimary"
                            android:maxLines="1"
                            android:imeOptions="actionNext"
                            android:nextFocusDown="@+id/editText_LastName"
                            android:nextFocusUp="@+id/editText_LastName"
                            android:nextFocusForward="@+id/editText_LastName"
                            android:nextFocusRight="@+id/editText_LastName"
                            android:nextFocusLeft="@+id/editText_LastName"
                            android:singleLine="true"
                            android:fontFamily="sans-serif" />
                    </android.support.design.widget.TextInputLayout>

                    <android.support.design.widget.TextInputLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="8dp"
                        android:layout_marginBottom="8dp"
                        android:layout_weight="1"
                        android:theme="@style/Theme.EditTextBlack">
                        <EditText
                            android:id="@+id/editText_LastName"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:hint="Last Name"
                            android:inputType="textCapWords"
                            android:maxLines="1"
                            android:imeOptions="actionNext"
                            android:nextFocusDown="@+id/editText_Email"
                            android:nextFocusUp="@+id/editText_Email"
                            android:nextFocusForward="@+id/editText_Email"
                            android:nextFocusRight="@+id/editText_Email"
                            android:nextFocusLeft="@+id/editText_Email"
                            android:textColor="@color/textPrimary"
                            android:singleLine="true"
                            android:fontFamily="sans-serif"/>
                    </android.support.design.widget.TextInputLayout>


                </LinearLayout>

                <android.support.design.widget.TextInputLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="8dp"
                    android:layout_marginBottom="8dp"
                    android:theme="@style/Theme.EditTextBlack">
                    <EditText
                        android:id="@+id/editText_Email"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:hint="E-mail"
                        android:inputType="textEmailAddress"
                        android:maxLines="1"
                        android:textColor="@color/textPrimary"
                        android:singleLine="true"
                        android:fontFamily="sans-serif"/>
                </android.support.design.widget.TextInputLayout>

                <android.support.design.widget.TextInputLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="8dp"
                    android:layout_marginBottom="8dp"
                    android:theme="@style/Theme.EditTextBlack">
                    <EditText
                        android:id="@+id/editText_Phone"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:hint="Phone"
                        android:inputType="phone"
                        android:maxLength="10"
                        android:textColor="@color/textPrimary"
                        android:singleLine="true"
                        android:fontFamily="sans-serif"/>
                </android.support.design.widget.TextInputLayout>

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="DOB"
                    android:textSize="17sp"
                    android:layout_marginLeft="5dp" />

                <android.support.v7.widget.AppCompatButton
                    android:id="@+id/button_DOB"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="-- : -- : ----"
                    android:gravity="left|center_vertical"
                    android:paddingLeft="6dp"
                    android:background="@color/transperent"/>

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Set Avatar"
                    android:layout_marginLeft="8dp"
                    android:layout_marginTop="8dp"
                    android:textSize="20sp"/>

                <de.hdodenhof.circleimageview.CircleImageView
                    android:id="@+id/avatar"
                    android:layout_gravity="center_horizontal"
                    android:src="@drawable/ic_avatar"
                    app:border_color="@color/grayDark"
                    app:border_width="5dp"
                    android:layout_width="110dp"
                    android:layout_height="110dp" />

                <android.support.v7.widget.AppCompatButton
                    android:id="@+id/button_Update"
                    android:text="Register"
                    android:textColor="@color/colorAccent"
                    android:background="@color/grayLight"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="10dp"/>

                </LinearLayout>

            </ScrollView>

    </android.support.v7.widget.CardView>

</RelativeLayout>