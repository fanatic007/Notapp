<?xml version="1.0" encoding="utf-8"?>

<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:padding="10dp"
    android:background="@color/colorPrimaryDark">

    <ScrollView
        android:layout_height="match_parent"
        android:layout_width="match_parent">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:paddingLeft="10dp"
                android:paddingTop="60dp"
                >

                <LinearLayout
                    android:orientation="horizontal"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:gravity="center_vertical"
                    >
                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:orientation="vertical"
                        android:gravity="center_vertical">

                        <TextView
                            android:id="@+id/textView_fragment_1"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="@string/fragment_1"
                            android:textColor="@color/white"
                            android:textSize="22sp"
                            android:fontFamily="sans-serif-thin"
                            android:layout_marginLeft="5dp"
                            android:layout_marginBottom="10dp"/>
                        <TextView
                            android:id="@+id/textView_fragment_2"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:text="@string/fragment_2"
                            android:textColor="@color/white"
                            android:textSize="22sp"
                            android:fontFamily="sans-serif-thin"
                            android:layout_marginLeft="5dp"
                            android:layout_marginBottom="10dp"/>
                        <TextView
                            android:id="@+id/textView_fragment_3"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="@string/fragment_3"
                            android:textColor="@color/white"
                            android:textSize="22sp"
                            android:fontFamily="sans-serif-thin"
                            android:layout_marginLeft="5dp"
                            android:layout_marginBottom="10dp"/>
                        <TextView
                            android:id="@+id/textView_fragment_4"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="@string/be_a_rebel"
                            android:textColor="@color/white"
                            android:textSize="22sp"
                            android:fontFamily="sans-serif-thin"
                            android:layout_marginLeft="5dp"
                            android:layout_marginBottom="10dp"/>
                        <TextView
                            android:id="@+id/textView_fragment_5"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="@string/privacy_policy"
                            android:textColor="@color/white"
                            android:textSize="22sp"
                            android:fontFamily="sans-serif-thin"
                            android:layout_marginLeft="5dp"
                            android:layout_marginBottom="10dp"/>

                    </LinearLayout>

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_weight="1">

                        <ImageView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:src="@drawable/help_symbol" />

                    </LinearLayout>

                </LinearLayout>

            </LinearLayout>

            <Button
                android:id="@+id/button_take_a_tour"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Take a tour ---->"
                android:textSize="15sp"
                android:fontFamily="sans-serif-thin"
                android:textColor="@color/white"
                android:background="@color/transperent"
                android:layout_marginTop="50dp"
                android:layout_marginLeft="30dp"
                android:layout_marginRight="30dp"
                />

        </LinearLayout>

    </ScrollView>

</LinearLayout>