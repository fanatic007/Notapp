<?xml version="1.0" encoding="utf-8"?>
<PreferenceScreen
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:key="edit_profile_preference_screen">

    <PreferenceCategory
        android:title="Name"
        >

        <EditTextPreference
            android:key="f_name"
            android:title="First Name"
            android:inputType="textCapWords"
            android:summary="Edit your First Name"
            android:dialogTitle="Edit your Name"
            />
        <EditTextPreference
            android:key="l_name"
            android:title="Last Name"
            android:inputType="textCapWords"
            android:summary="Edit your Last Name"
            android:dialogTitle="Edit your Name"
            />

    </PreferenceCategory>

    <PreferenceCategory
        android:title="Contact Information">

        <EditTextPreference
            android:key="email"
            android:title="Email"
            android:inputType="textEmailAddress"
            android:summary="Edit e-mail"
            android:dialogTitle="Enter email"
            />


        <EditTextPreference
            android:key="phone"
            android:title="Phone Number"
            android:inputType="phone"
            android:maxLength="10"
            android:summary="Change Password"
            android:dialogTitle="Enter Phone Number" />

    </PreferenceCategory>

    <PreferenceCategory>
        <Preference
            android:key="dob"
            android:title="DOB"
            />

        <Preference
            android:key="pword"
            android:title="Password"
            android:enabled="true"
            android:summary="Change Password"
            />
    </PreferenceCategory>

</PreferenceScreen>